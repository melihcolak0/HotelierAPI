@model UpdateStaffViewModel
@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Personel Güncelle</h4>
                    <br />
                    <div class="basic-form">
                        <form method="post">
                            <input type="hidden" asp-for="StaffId"/>
                            <div class="form-group">
                                <label>Adı ve Soyadı</label>
                                <input type="text" class="form-control input-flat" asp-for="NameSurname">
                            </div>
                            <div class="form-group">
                                <label>Ünvan</label>
                                <input type="text" class="form-control input-flat" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label>Sosyal Medya 1</label>
                                <input type="text" class="form-control input-flat" asp-for="SocialMedia1">
                            </div>
                            <div class="form-group">
                                <label>Sosyal Medya 2</label>
                                <input type="text" class="form-control input-flat" asp-for="SocialMedia2">
                            </div>
                            <div class="form-group">
                                <label>Sosyal Medya 3</label>
                                <input type="text" class="form-control input-flat" asp-for="SocialMedia3">
                            </div>
                            <button class="btn mb-1 btn btn-primary">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
