@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Personel İşlemleri</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Adı ve Soyadı</th>
                                    <th>Ünvan</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Detaylar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <th>@item.StaffId</th>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Title</td>
                                        <td><a href="/Staff/DeleteStaff/@item.StaffId" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
                                        <td><a href="/Staff/UpdateStaff/@item.StaffId" class="btn mb-1 btn-rounded btn-outline-warning">Güncelle</a></td>
                                        <td><a href="/Staff/DetailStaff/@item.StaffId" class="btn mb-1 btn-rounded btn-outline-primary">Detaylar</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Staff/AddStaff" class="btn mb-1 btn-rounded btn-outline-info">Yeni Personel Ekle</a>
                    </div>
                </div>                
            </div>            
        </div>
    </div>
</div>
