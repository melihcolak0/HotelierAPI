@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hizmet Güncelle</h4>
                    <br />
                    <div class="basic-form">
                        <form method="post">
                            <input type="hidden" asp-for="ServiceId" />
                            <div class="form-group">
                                <label>Hizmet</label>
                                <input type="text" class="form-control input-flat" asp-for="Title">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>İkon</label>
                                <input type="text" class="form-control input-flat" asp-for="ServiceIcon">
                                <span asp-validation-for="ServiceIcon" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea class="form-control h-150px" rows="6" asp-for="Description"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <button class="btn mb-1 btn btn-primary">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
