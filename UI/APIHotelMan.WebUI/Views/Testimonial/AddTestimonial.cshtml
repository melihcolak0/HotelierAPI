@model CreateTestimonialDto
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Referans Ekle</h4>
                    <br />
                    <div class="basic-form">
                        <form method="post">
                            <div class="form-group">
                                <label>Adı ve Soyadı</label>
                                <input type="text" class="form-control input-flat" asp-for="NameSurname">
                            </div>
                            <div class="form-group">
                                <label>Meslek</label>
                                <input type="text" class="form-control input-flat" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label>Resim Url</label>
                                <input type="text" class="form-control input-flat" asp-for="Image">
                            </div>                            
                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea class="form-control h-150px" rows="6" asp-for="Description"></textarea>
                            </div>
                            <button class="btn mb-1 btn btn-primary">Ekle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
