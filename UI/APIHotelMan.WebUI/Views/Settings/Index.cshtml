@model EditUserDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Kullanıcı Bilgileri</h4>
                    <br />
                    <div class="basic-form">
                        <form method="post">
                            @* <input type="hidden" asp-for="StaffId" /> *@
                            <div class="form-group">
                                <label>Adı</label>
                                <input type="text" class="form-control input-flat" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label>Soyadı</label>
                                <input type="text" class="form-control input-flat" asp-for="Surname">
                            </div>
                            <div class="form-group">
                                <label>Kullanıcı Adı</label>
                                <input type="text" class="form-control input-flat" asp-for="UserName">
                            </div>
                            <div class="form-group">
                                <label>E-Mail Adresi</label>
                                <input type="email" class="form-control input-flat" asp-for="Email">
                            </div>
                            <div class="form-group">
                                <label>Şifreniz</label>
                                <input type="password" class="form-control input-flat" asp-for="Password">
                            </div>
                            <div class="form-group">
                                <label>Şifreniz Tekrar</label>
                                <input type="password" class="form-control input-flat" asp-for="ConfirmPassword">
                            </div>
                            <button class="btn mb-1 btn btn-primary">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
