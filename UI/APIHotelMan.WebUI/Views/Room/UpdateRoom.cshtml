@model UpdateRoomDto
@{
    ViewData["Title"] = "UpdateRoom";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Oda Güncelle</h4>
                    <br />
                    <div class="basic-form">
                        <form method="post">
                            <input type="hidden" asp-for="RoomId" />
                            <div class="form-group">
                                <label>Oda Numarası</label>
                                <input type="number" class="form-control input-flat" asp-for="RoomNumber">
                            </div>
                            <div class="form-group">
                                <label>Başlık</label>
                                <input type="text" class="form-control input-flat" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label>Resim Url</label>
                                <input type="text" class="form-control input-flat" asp-for="RoomCoverImage">
                            </div>
                            <div class="form-group">
                                <label>Fiyat</label>
                                <input type="number" class="form-control input-flat" asp-for="Price">
                            </div>
                            <div class="form-group">
                                <label>Yatak Sayısı</label>
                                <input type="text" class="form-control input-flat" asp-for="BedCount">
                            </div>
                            <div class="form-group">
                                <label>Banyo Sayısı</label>
                                <input type="text" class="form-control input-flat" asp-for="BathCount">
                            </div>
                            <div class="form-group">
                                <label>Wi-Fi</label>
                                <input type="text" class="form-control input-flat" asp-for="Wifi">
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea class="form-control h-150px" rows="6" asp-for="Description"></textarea>
                            </div>
                            <button class="btn mb-1 btn btn-primary">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
