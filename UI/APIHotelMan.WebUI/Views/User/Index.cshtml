@model List<ResultAppUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Kullanıcı İşlemleri</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Adı ve Soyadı</th>      
                                    <th>Kullanıcı Adı</th>
                                    <th>E-Mail</th>
                                    <th>Şehir</th>  
                                    <th>Lokasyon</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>                                        
                                        <td>@item.UserName</td>
                                        <td>@item.Email</td>
                                        <td>@item.City</td>                                        
                                        <td>@item.WorkLocation.WorkLocationName</td>
                                        <td><a href="/User/DeleteUser/@item.Id" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
                                        <td><a href="/User/UpdateUser/@item.Id" class="btn mb-1 btn-rounded btn-outline-warning">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/User/AddUser" class="btn mb-1 btn-rounded btn-outline-info">Yeni Kullanıcı Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
