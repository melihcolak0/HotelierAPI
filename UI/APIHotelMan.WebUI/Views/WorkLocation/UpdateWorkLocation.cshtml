@model UpdateWorkLocationDto
@{
    ViewData["Title"] = "UpdateWorkLocation";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Otel Lokasyonu Güncelle</h4>
                    <br />
                    <div class="basic-form">
                        <form method="post">
                            <input type="hidden" asp-for="WorkLocationId" />
                            <div class="form-group">
                                <label>Otel Adı</label>
                                <input type="text" class="form-control input-flat" asp-for="WorkLocationName">
                            </div>
                            <div class="form-group">
                                <label>Şehir</label>
                                <input type="text" class="form-control input-flat" asp-for="WorkLocationCity">
                            </div>
                            <button class="btn mb-1 btn btn-primary">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
