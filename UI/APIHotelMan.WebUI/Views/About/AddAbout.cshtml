@model CreateAboutDto
@{
    ViewData["Title"] = "AddAbout";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Hakkında Bölümü Ekle</h4>
                    <br />
                    <div class="basic-form">
                        <form method="post">
                            <div class="form-group">
                                <label>Başlık 1</label>
                                <input type="text" class="form-control input-flat" asp-for="Title1">
                            </div>
                            <div class="form-group">
                                <label>Başlık 2</label>
                                <input type="text" class="form-control input-flat" asp-for="Title2">
                            </div>
                            <div class="form-group">
                                <label>Oda Sayısı</label>
                                <input type="number" class="form-control input-flat" asp-for="RoomCount">
                            </div>
                            <div class="form-group">
                                <label>Personel Sayısı</label>
                                <input type="number" class="form-control input-flat" asp-for="StaffCount">
                            </div>
                            <div class="form-group">
                                <label>Misafir Sayısı</label>
                                <input type="number" class="form-control input-flat" asp-for="CustomerCount">
                            </div>
                            <div class="form-group">
                                <label>İçerik</label>
                                <textarea class="form-control h-150px" rows="6" asp-for="Content"></textarea>
                            </div>
                            <button class="btn mb-1 btn btn-primary">Ekle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
