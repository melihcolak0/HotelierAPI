@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Hakkında İşlemleri</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Başlık 1</th>
                                    <th>Başlık 2</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.AboutId</th>
                                        <td>@item.Title1</td>
                                        <td>@item.Title2</td>
                                        <td><a href="/About/DeleteAbout/@item.AboutId" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
                                        <td><a href="/About/UpdateAbout/@item.AboutId" class="btn mb-1 btn-rounded btn-outline-warning">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/About/AddAbout" class="btn mb-1 btn-rounded btn-outline-info">Yeni Hakkında Bölümü Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
