@model List<RoleAssignDto>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Rol Ata</h4>
                    <br />
                    <div class="basic-form">
                        <form method="post">                            
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <input type="hidden" asp-for="@Model[i].RoleId" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />

                                <div class="form-group">
                                    <div class="form-check mb-3">
                                        <label class="form-check-label" for="@Model[i].RoleExist">
                                            <input type="checkbox" class="form-check-input" asp-for="@Model[i].RoleExist">@Model[i].RoleName
                                        </label>
                                    </div>
                                </div>
                            }
                            <button class="btn mb-1 btn btn-primary">Rolleri Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
